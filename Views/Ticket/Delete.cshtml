@model SupportTicketSystem.Models.Ticket

@{
    ViewData["Title"] = "Delete Ticket";
}

<h2>Delete Ticket</h2>

<h4>Are you sure you want to delete this ticket?</h4>

<div>
    <strong>Title:</strong> @Model.Title<br />
    <strong>Priority:</strong> @Model.Priority<br />
    <strong>Status:</strong> @Model.Status<br />
    <strong>Category:</strong> @Model.Category<br />
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
